{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://nano-opencode.dev/schemas/tool.json",
  "title": "Tool Interface",
  "description": "Language-agnostic tool definition for nano-opencode",
  "type": "object",
  "required": ["name", "description", "parameters"],
  "properties": {
    "name": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9_]*$",
      "description": "Unique tool identifier (lowercase with underscores)"
    },
    "description": {
      "type": "string",
      "minLength": 10,
      "maxLength": 500,
      "description": "Human-readable description of what the tool does"
    },
    "parameters": {
      "type": "object",
      "required": ["type", "properties"],
      "properties": {
        "type": {
          "const": "object"
        },
        "properties": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/$defs/parameter"
          }
        },
        "required": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    }
  },
  "$defs": {
    "parameter": {
      "type": "object",
      "required": ["type", "description"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["string", "number", "integer", "boolean", "array", "object"]
        },
        "description": {
          "type": "string"
        },
        "enum": {
          "type": "array",
          "items": { "type": "string" }
        },
        "default": {},
        "items": {
          "$ref": "#/$defs/parameter"
        }
      }
    }
  }
}
