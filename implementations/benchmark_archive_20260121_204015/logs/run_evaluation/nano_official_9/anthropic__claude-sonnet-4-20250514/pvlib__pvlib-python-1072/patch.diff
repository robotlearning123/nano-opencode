+def test_fuentes_tz_aware():
+    # Test that fuentes works with timezone-aware DatetimeIndex
+    # GitHub issue: timezone-aware inputs cause errors in pandas>=1.0.0
+    times_naive = pd.date_range('2019-01-01', freq='h', periods=3)
+    inputs_naive = {
+        'poa_global': pd.Series(1000, index=times_naive),
+        'temp_air': pd.Series(20, index=times_naive),
+        'wind_speed': pd.Series(1, index=times_naive),
+        'noct_installed': 45
+    }
+    
+    # Test with timezone-aware UTC index
+    times_utc = times_naive.tz_localize('UTC')
+    inputs_utc = {
+        'poa_global': pd.Series(1000, index=times_utc),
+        'temp_air': pd.Series(20, index=times_utc),
+        'wind_speed': pd.Series(1, index=times_utc),
+        'noct_installed': 45
+    }
+    
+    result_naive = temperature.fuentes(**inputs_naive)
+    result_utc = temperature.fuentes(**inputs_utc)
+    
+    # Results should be identical
+    assert_allclose(result_naive.values, result_utc.values)
+    
+    # Test with a different timezone
+    times_mst = times_naive.tz_localize('US/Mountain')
+    inputs_mst = {
+        'poa_global': pd.Series(1000, index=times_mst),
+        'temp_air': pd.Series(20, index=times_mst),
+        'wind_speed': pd.Series(1, index=times_mst),
+        'noct_installed': 45
+    }
+    
+    result_mst = temperature.fuentes(**inputs_mst)
+    assert_allclose(result_naive.values, result_mst.values)
